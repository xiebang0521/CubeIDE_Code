#include <RFID.h>

uint8_t Config_Command[6];
uint8_t Rc523_Respond[6];

/**
 * 获取校验码的值
 */
uint8_t Get_Bcc_Value(uint8_t* arr, uint8_t size) {
    uint8_t result = arr[0];

    for (int i = 1; i < size; i++) {
        result ^= arr[i];
    }

    // 异或取反
    result = ~result;

    return result;
}

uint8_t RFID_Rc523_Config(void)
{
    // 设置IC芯片的类型
    HAL_USART_Transmit();

}